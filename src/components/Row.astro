---
export interface Props {
    title: string;
    href: string;
}

const { title, href } = Astro.props;
---

<section>
    <a href={href} class="heading">
        <h2>{title}</h2>
        <span class="explore">Explore Â»</span>
    </a>
    <div class="cards">
        <slot />
    </div>
</section>

<style lang="scss">
    .cards {
        height: 15em;
        display: flex;
        flex-wrap: nowrap;
        overflow-x: auto;
        border-inline: 1px solid white;
        padding: 1ch;
        
        scrollbar-width: thin;
    }

    section {
        width: 100%;
        background-color: #0006;
        padding: 1em;

        .heading {
            display: flex;
            color: white;
            text-decoration: none;

            & > * {
                margin: 20px;
            }

            .explore {
                margin-left: auto;
                display: flex;
            }
            &:hover .explore {
                text-decoration: underline;
            }
        }
    }
</style>